@code{
    private DateTime currentLocalTime;
    bool NightTime;

    protected override async Task OnAfterRenderAsync(bool firstRender) {
        if(firstRender) {
            var browserDateTime = await browserDateTimeProvider.GetInstance();
            currentLocalTime = browserDateTime.Now;
            }
        if (currentLocalTime.Hour < 4 || currentLocalTime.Hour > 22) {
            NightTime = true;
            }
        else {
            NightTime = false;
            }
        StateHasChanged();
        }
}